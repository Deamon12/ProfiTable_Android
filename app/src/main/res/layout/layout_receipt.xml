<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_light"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/primary">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/logo_75"
                android:tint="@android:color/white" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Restaurant Name"
            android:textColor="@color/secondary_text"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/servertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/amount_frag_header_text"
            android:text="Server: "
            android:layout_below="@+id/textview"
            android:layout_toLeftOf="@+id/center_point"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jim Jim"
            android:textSize="@dimen/amount_frag_amount_text"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/servertext"
            android:layout_toRightOf="@+id/servertext"/>


    <TextView
        android:id="@+id/tabid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/amount_frag_header_text"
        android:text="Transaction # "
        android:layout_below="@+id/servertext"
        android:layout_toLeftOf="@+id/center_point"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J123453"
        android:textSize="@dimen/amount_frag_amount_text"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/tabid_text"
        android:layout_toRightOf="@+id/tabid_text"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/accent"
            android:layout_below="@+id/tabid_text"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>


        <!-- amounts -->

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/center_point"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/totaltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textSize="@dimen/amount_frag_header_text"
            android:layout_toLeftOf="@+id/center_point"
            android:layout_marginTop="@dimen/amount_margin_top"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/center_point"/>

        <TextView
            android:id="@+id/subtotal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100.00"
            android:textSize="@dimen/amount_frag_amount_text"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/totaltext"
            android:layout_toRightOf="@+id/totaltext"/>


        <TextView
            android:id="@+id/taxtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax (7.5%)"

            android:layout_toLeftOf="@+id/center_point"
            android:textSize="@dimen/amount_frag_header_text"
            android:layout_below="@+id/subtotal_label"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/amount_margin_top"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$15.00"
            android:id="@+id/tax_textview"
            android:textSize="@dimen/amount_frag_amount_text"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/taxtext"
            android:layout_toRightOf="@+id/taxtext"/>


        <TextView
            android:id="@+id/discounttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"

            android:layout_toLeftOf="@+id/center_point"
            android:textSize="@dimen/amount_frag_header_text"
            android:layout_below="@+id/tax_textview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/amount_margin_top"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.00"
            android:id="@+id/discount_textview"
            android:textSize="@dimen/amount_frag_amount_text"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/discounttext"
            android:layout_toRightOf="@+id/discounttext"/>
        <!-- layout width and height used to be wrap_content-->


    </RelativeLayout>

