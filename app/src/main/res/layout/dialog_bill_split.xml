<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/the_cardview">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="3"
    android:padding="@dimen/additions_dialog_padding">


    <!-- Tile 1 -->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/split_per_customer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:cardElevation="1dp"
        android:layout_weight="1"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/split_pre_customer_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tile_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/multi_split"
                android:layout_above="@+id/tile_text1"
                android:padding="@dimen/table_padding"
                android:layout_centerInParent="true"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/tile_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Split per customer"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/primary_dark"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!-- tile 2 -->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/no_split_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tile_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_75"
                android:layout_above="@+id/tile_text2"
                android:padding="@dimen/table_padding"
                android:layout_centerInParent="true"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/tile_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No split - 1 bill"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/primary_dark"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!-- tile 2 -->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/equal_split_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tile_image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/equal_split_2"
                android:layout_above="@+id/tile_text3"
                android:padding="@dimen/table_padding"
                android:layout_centerInParent="true"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/tile_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equal split"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/primary_dark"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>


</android.support.v7.widget.CardView>
