<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle_grey600_18dp"
            android:layout_margin="5dp"
            android:tint="@color/primary"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/flag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assistant_photo_black_18dp"
            android:layout_toRightOf="@+id/tile_name_text"
            android:layout_alignTop="@+id/tile_name_text"
            android:layout_alignBottom="@+id/tile_name_text"
            android:tint="@color/primary_dark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tile_name_text"
            android:text="Table 1"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/check_button"
            android:layout_alignTop="@+id/check_button"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tile_name_text"
            android:layout_alignLeft="@+id/tile_name_text">



        </android.support.v7.widget.RecyclerView>

