<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/partition_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:layout_alignTop="@+id/section_text"
        android:layout_alignBottom="@+id/section_text"/>

    <TextView
        android:id="@+id/section_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takeout"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/takeout_divider_arrow"
        android:lines="1"
        android:background="@color/primary_light"
        />

    <ImageView
        android:id="@+id/takeout_divider_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_drop_down_white_18dp"
        android:layout_alignTop="@+id/section_text"
        android:layout_alignBottom="@+id/section_text"
        android:layout_alignParentRight="true"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/takeout_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_text"/>


</RelativeLayout>
