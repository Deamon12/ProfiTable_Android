<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/customer_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_person_black_18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_count_text"
        android:text="Customer 1"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/customer_image"
        android:layout_alignTop="@+id/customer_image"
        android:layout_toRightOf="@+id/customer_image"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/items_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_count_text"
        android:layout_toRightOf="@+id/customer_image"
        android:orientation="vertical">

        <!-- TODO: Move this Relative to its own layout and dynamically maintain them-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/food_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item 1"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/status_image"
                android:lines="1"
                android:ellipsize="end" />


            <ImageView
                android:id="@+id/status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/food_item_text"
                android:layout_alignBottom="@+id/food_item_text"
                android:padding="8dp"
                android:src="@drawable/ic_query_builder_black_18dp"
                />


        </RelativeLayout>




    </LinearLayout>

</RelativeLayout>