<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/tile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tile_text2"
        android:textColor="@color/primary_text"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="Item 1"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tile_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:text="$5.00"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tile_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:text="No cheese"
        android:textSize="@dimen/customer_order_text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tile_text"
        android:textStyle="bold"/>


</RelativeLayout>